#!/bin/bash
. "$(dirname "$0")/_/husky.sh"

set -e

# Pre-commit hook with comprehensive validation, fossilization, and performance audit
# Follows fossil-first, validation-first, and error-prevention patterns from @/docs

echo "ðŸ” [Pre-commit] Starting unified validation, fossilization, and performance audit..."
echo "ðŸ“… Timestamp: $(date -u +"%Y-%m-%dT%H:%M:%SZ")"
echo "ðŸ”— Commit: $(git rev-parse --short HEAD)"
echo "ðŸŒ¿ Branch: $(git branch --show-current)"
echo ""

# =============================================================================
# TIMESTAMP-ONLY CHANGE FILTER (block commit if only timestamps changed)
# =============================================================================
echo "â³ [Pre-commit] Checking for timestamp-only changes..."
if bun run src/cli/timestamp-filter.ts --check; then
  echo 'âŒ Only timestamp changes detected in fossils or tracked files. Skipping commit.'
  exit 1
fi

echo "âœ… No timestamp-only changes detected. Proceeding with validations..."

# =============================================================================
# MANDATORY VALIDATION STEPS (Block commit on failure)
# =============================================================================

echo "ðŸ“‹ [Step 1/6] TypeScript type-checking..."
if bun run type-check; then
    echo "âœ… TypeScript validation passed"
else
    echo "âŒ TypeScript validation failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 1.5/6] Type and schema cohesion validation..."
echo "  ðŸ” Checking schema consistency across types/schemas/..."
if bun run validate:types-schemas-cohesion; then
    echo "âœ… Type and schema cohesion validation passed"
else
    echo "âŒ Type/schema cohesion validation failed - blocking commit"
    echo "  ðŸ’¡ Check for:"
    echo "    - Circular dependencies in schemas"
    echo "    - Inconsistent type definitions"
    echo "    - Missing schema exports"
    echo "    - Schema conflicts or overlaps"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 2/6] Linting and code style validation..."
if bun run lint; then
    echo "âœ… Linting validation passed"
else
    echo "âŒ Linting validation failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 3/6] Running all tests (unit + integration)..."
if bun test; then
    echo "âœ… All tests passed"
else
    echo "âŒ Tests failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 4/6] Running comprehensive pre-commit validation..."
if bun run validate:pre-commit; then
    echo "âœ… Pre-commit validation passed"
else
    echo "âŒ Pre-commit validation failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 4.5/6] Enhanced commit message validation..."
if bun run scripts/enhanced-pre-commit-validator.ts --validate --pre-commit --strict; then
    echo "âœ… Enhanced commit message validation passed"
else
    echo "âŒ Enhanced commit message validation failed - blocking commit"
    echo "  ðŸ’¡ Use bun run scripts/commit-message-template.ts --create to generate proper templates"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 4.5/6] Validating all types and schemas..."
if bun run validate:types-schemas --strict; then
    echo "âœ… Type and schema validation passed"
else
    echo "âŒ Type/schema validation failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 5/6] Validating fossil and plan files..."
changed_json=$(git diff --cached --name-only | grep -E '\\.json$' || true)
fossil_validation_passed=true

for file in $changed_json; do
    if [[ $file == *plan* ]] || [[ $file == *fossil* ]] || [[ $file == *roadmap* ]]; then
        echo "  ðŸ¦´ Validating: $file"
        if bun run validate:plan validate "$file" --strict; then
            echo "    âœ… $file validation passed"
        else
            echo "    âŒ $file validation failed"
            fossil_validation_passed=false
        fi
    fi
done

if [ "$fossil_validation_passed" = false ]; then
    echo "âŒ Fossil/plan validation failed - blocking commit"
    exit 1
fi

echo ""
echo "ðŸ“‹ [Step 6/6] Performance monitoring on changed scripts..."
changed_scripts=$(git diff --cached --name-only --diff-filter=ACM | grep '^scripts/.*\\.ts$' || true)
performance_check_passed=true

if [ -n "$changed_scripts" ]; then
    echo "  ðŸ“Š Monitoring performance for changed scripts:"
    for script in $changed_scripts; do
        echo "    ðŸ” Monitoring: $script"
        if bun run src/cli/performance-monitor.ts monitor "$script"; then
            echo "      âœ… $script performance check passed"
        else
            echo "      âŒ $script performance check failed"
            performance_check_passed=false
        fi
    done
else
    echo "  â„¹ï¸  No script changes detected - skipping performance monitoring"
fi

if [ "$performance_check_passed" = false ]; then
    echo "âŒ Performance check failed - blocking commit"
    exit 1
fi

# =============================================================================
# OPTIONAL FOSSILIZATION AND REPORTING STEPS (Don't block commit)
# =============================================================================

echo ""
echo "ðŸ¦´ [Optional] Fossilization and reporting for traceability..."

# Optional: Fossilize validation results
if command -v bun >/dev/null 2>&1 && [ -f "src/cli/fossilize-validation.ts" ]; then
    echo "  ðŸ“ Fossilizing validation results..."
    if bun run src/cli/fossilize-validation.ts --last; then
        echo "    âœ… Validation results fossilized"
    else
        echo "    âš ï¸  Validation fossilization failed (non-blocking)"
    fi
fi

# Optional: Fossilize performance results
if command -v bun >/dev/null 2>&1 && [ -f "src/cli/fossilize-performance.ts" ]; then
    echo "  ðŸ“Š Fossilizing performance results..."
    if bun run src/cli/fossilize-performance.ts --last; then
        echo "    âœ… Performance results fossilized"
    else
        echo "    âš ï¸  Performance fossilization failed (non-blocking)"
    fi
fi

# Optional: Generate LLM insights for changed files
if [ -n "$OPENAI_API_KEY" ] && command -v bun >/dev/null 2>&1 && [ -f "src/cli/llm-analyze.ts" ]; then
    echo "  ðŸ§  Generating LLM insights for changes..."
    changed_files=$(git diff --cached --name-only | head -5 | tr '\n' ' ')
    if bun run src/cli/llm-analyze.ts --files "$changed_files" --fossilize; then
        echo "    âœ… LLM insights generated and fossilized"
    else
        echo "    âš ï¸  LLM insights generation failed (non-blocking)"
    fi
fi

# Optional: Update fossilization summary
if command -v bun >/dev/null 2>&1 && [ -f "src/cli/fossil-summary.ts" ]; then
    echo "  ðŸ“‹ Updating fossilization summary..."
    if bun run src/cli/fossil-summary.ts --update; then
        echo "    âœ… Fossilization summary updated"
    else
        echo "    âš ï¸  Fossilization summary update failed (non-blocking)"
    fi
fi

echo ""
echo "ðŸŽ‰ [Pre-commit] All validations passed! Commit proceeding..."
echo "ðŸ“Š Final LLM Usage: $(bun run src/cli/llm-usage.ts --summary 2>/dev/null || echo 'N/A')"
echo "âœ… Graceful shutdown complete"
